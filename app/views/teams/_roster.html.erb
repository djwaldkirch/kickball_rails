<h2>ROSTER</h2>
<%= link_to "Add Player", :new_player %>
<br></br>
<table class="table table-striped">
    <tr>
        <td><b>Name</b></td>
        <td><b>M/F</b></td>
        <td><b>1</b></td>
        <td><b>2</b></td>
        <td><b>3</b></td>
        <td><b>4</b></td>
        <td><b>5</b></td>
        <td><b>6</b></td>
        <td><b>7</b></td>
        <td><b>8</b></td>
        <td><b>9</b></td>
        <td><b>10</b></td>
        <td><b>Active?</b></td>
        <td><b>Actions</b></td>
    <% @players.each do |p| %>
    <tr>
        <td><%= p.name %></td>
        <td><%= p.gender[0].upcase %></td>
        <td><%= p.p1 %></td>
        <td><%= p.p2 %></td>
        <td><%= p.p3 %></td>
        <td><%= p.p4 %></td>
        <td><%= p.p5 %></td>
        <td><%= p.p6 %></td>
        <td><%= p.p7 %></td>
        <td><%= p.p8 %></td>
        <td><%= p.p9 %></td>
        <td><%= p.p10 %></td>
        <td style="text-align: center;"><%= check_box_tag('p[active]', '1', p.active?, 
        :onchange => "$.ajax({type:'PUT', url:'#{player_path(p.id)}', data: {'p[active]': (this.checked ? '1' : '0') }, 
        context:document.body, dataType: 'json'}); void 0;", :id => "player_active_checkbox_#{p.id}") %></td>
        <td><%= link_to "Edit", edit_player_path(p) %> | <%= link_to "Remove", player_path(p), method: :delete %></td>
    </tr>
    <% end %>
</table>
<br></br>