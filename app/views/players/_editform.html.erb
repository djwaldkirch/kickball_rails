<%= form_for @player, url:{:controller=>'players', :action=>'update'}, html:{method:'put', class:"form-horizontal"} do |f| %>
    <% menu = [['Pitcher','p'],['Catcher','c'],['First','first'],['Third','third'],['Left Rover','lr'],['Right Rover','rr'],['Left','l'],['Left Center','lc'],['Right Center','rc'],['Right','r']] %>
    
    <div class="form-group row">
        <%= f.label :name, class:"col-sm-2 col-form-label" %>
        <%= f.text_field :name, class:"form-control col-sm-10" %>
    </div>
    
    <div class="form-group row">
        <%= f.label :gender, class:"col-sm-2 col-form-label" %>
        <%= f.select :gender, [['Male', 'male'], ['Female', 'female']], {}, {class: "form-control col-sm-10"} %>
    </div>
    
    <p>Position Preferences</p>
    <p><em>Use each position only once.</em></p>
    <div class="form-group row">
        <%= f.label :p1, "1.", class:"col-sm-2 col-form-label text-right" %>
        <%= f.select :p1, menu, {}, {class: "form-control col-sm-10"} %>
    </div>

    <div class="form-group row">
        <%= f.label :p2, "2.", class:"col-sm-2 col-form-label text-right" %>
        <%= f.select :p2, menu, {}, {class: "form-control col-sm-10"} %>
    </div>


    <div class="form-group row">
        <%= f.label :p3, "3.", class:"col-sm-2 col-form-label text-right" %>
        <%= f.select :p3,menu, {}, {class: "form-control col-sm-10"} %>
    </div>
    
    
    <div class="form-group row">
        <%= f.label :p4, "4.", class:"col-sm-2 col-form-label text-right" %>
        <%= f.select :p4, menu, {}, {class: "form-control col-sm-10"} %>
    </div>
    
    
    <div class="form-group row">
        <%= f.label :p5, "5.", class:"col-sm-2 col-form-label text-right" %>
        <%= f.select :p5, menu, {}, {class: "form-control col-sm-10"} %>
    </div>
    
    
    <div class="form-group row">
        <%= f.label :p6, "6.", class:"col-sm-2 col-form-label text-right" %>
        <%= f.select :p6, menu, {}, {class: "form-control col-sm-10"} %>
    </div>
    
    
    <div class="form-group row">
        <%= f.label :p7, "7.", class:"col-sm-2 col-form-label text-right" %>
        <%= f.select :p7, menu, {}, {class: "form-control col-sm-10"} %>
    </div>
    
    
    <div class="form-group row">
        <%= f.label :p8, "8.", class:"col-sm-2 col-form-label text-right" %>
        <%= f.select :p8, menu, {}, {class: "form-control col-sm-10"} %>
    </div>
    
    
    <div class="form-group row">
        <%= f.label :p9, "9.", class:"col-sm-2 col-form-label text-right" %>
        <%= f.select :p9, menu, {}, {class: "form-control col-sm-10"} %>
    </div>
    
    
    <div class="form-group row">
        <%= f.label :p10, "10.", class:"col-sm-2 col-form-label text-right" %>
        <%= f.select :p10, menu, {}, {class: "form-control col-sm-10"} %>
    </div>
    
    <div class="form-group row">
        <%= f.label :active, class:"col-sm-2 col-form-label0 text-right" %>
        <%= f.check_box :active %>
    </div>
    
    
    <div class="text-center">
        <%= f.submit "Update Player", class:"btn btn-danger" %>
    </div>
<% end %>
</form>